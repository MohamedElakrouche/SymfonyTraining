{% extends 'base.html.twig' %}



{% block body %}
<div class="container my-5">
    <h1>>Connexion</h1>
    {%if error %}
       <div>[[ error.messageKey|trans(error.messageData, 'security') ]]
       </div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username" >Nom d'utilisateur</label>
        <input class="form-control mt-2"type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
        <label for="password" class="mt-3">Mot de passe</label>
        <input class="form-control mt-2" type="password" id="password" name="_password" required>

        <button class="btn btn-success mt-3" type="submit">Se connecter</button>
<input type="hidden" name="_target_path" value="{{ path('app_account') }}">
    </form>
<p class='mt-3'> <a href="{{path('app_register')}}" >Pas encore inscrit ?</a></p>
</div>





{% endblock %}
